<!DOCTYPE html>
<html>
<head>
  <title>Mr Worldwide TV</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header>
      <h1><%= link_to "Mr. Worldwide TV", videos_path %></h1>
      <h3>Dale!</h3>
    </header>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to("Add Video", new_video_path) if logged_in? %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="navbar-text"><em>Welcome, <%= current_user.handle %></em></li>
            <li><%= link_to "Log Out", session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </div>
</body>
</html>
